{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "mergeConfidence:all-badges",
        ":rebaseStalePrs"
    ],
    "timezone": "US/Central",
    "labels": [],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "hostRules": [
        {
            "matchHost": "dhi.io",
            "hostType": "docker",
            "token": process.env.RENOVATE_DHI_TOKEN,
        }
    ],
    "packageRules": [
        {
            "description": "Label dependency",
            "matchDatasources": [
                "npm"
            ],
            "addLabels": [
                "dependency"
            ],
            "automerge": false,
            "minimumReleaseAge": "1 days"
        },
        {
            "description": "Automerge dependency patch",
            "matchDatasources": [
                "npm"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "addLabels": [
                "dependency",
                "automerge"
            ],
            "automerge": true,
            "minimumReleaseAge": "1 days"
        }
    ]
}
